{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node"]                // <-- add this
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"                      // <-- add this so your shims are picked up
  ],
  "exclude": ["node_modules"]
}
